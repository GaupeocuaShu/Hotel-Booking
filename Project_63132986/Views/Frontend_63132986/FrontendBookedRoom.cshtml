
@{
    ViewBag.Title = "FrontendBookedRooms";
    Layout = "~/Views/Shared/_FrontendProfileLayout.cshtml";
}

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Booked Rooms</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Forms</a></div>
                <div class="breadcrumb-item">Booked Rooms</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Your Booked Room</h2>
            <p class="section-lead">We provide advanced input fields, such as date picker, color picker, and so on.</p>
            <input type="hidden" value="@Session["userID"]" class="user_id" />
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <table id="userTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Customer ID Number</th>
                                        <th>User Name</th>
                                        <th>Room Name</th>
                                        <th>Check-in Day</th>
                                        <th>Payment Status</th>
                                        <th>Check-in Status</th>
                                        <th>Booking Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>
</div>

@section scripts{

    <script>

        $(document).ready(function () {

            const userID = $(".user_id").val();
            console.log(userID);
            //Get Booked Room list by ajax

            $("#userTable").DataTable({
                "ajax": {
                    "url": "/Frontend_63132986/GetList/" + userID,
                    "type": "GET",
                    "data": "json"
                },
                "columns": [
                    { "data": "ID" },
                    {
                        "data": "CustomerID", "render": function (data, type, row) {
                            return `<div class="customer-${row['ID']}"> ${data} </div>`
                        }
                    },
                    { "data": "UserName" },
                    { "data": "RoomName" },
                    { "data": "CheckinDay" },
                    {
                        "data": "PaymentStatus", "render": function (data) {
                            if (data == false) return "Not Paid";
                            else return "Paid";
                        }
                    },
                    {
                        "data": "CheckinStatus", "render": function (data) {
                            if (data == false) return "Not Check In";
                            else return "Checked In";
                        }
                    },
                    {
                        "data": "BookingStatus", "render": function (data, type, row) {
                            if (row["BookingStatus"] == "Pending") {
                                return `<div class='booking_status-${row["ID"]}'><span class="badge rounded-pill text-bg-danger">Sent Request Cancellation</span> </div>`;
                            } else if (row["BookingStatus"] == "Success") {
                                return `<div class='booking_status-${row["ID"]}'><span class="badge rounded-pill text-bg-success">Success</span></div>`;
                            }
                            else {
                                return `<div class='booking_status-${row["ID"]}'><span class="badge rounded-pill text-bg-warning">Cancelled</span></div>`;
                            }
                        }
                    },
                    {
                        "data": "ID", "class": "actionBtn text-center", "render": function (data, type, row) {
                            const cancelButton = row['BookingStatus'] == 'Success' ?
                                `<button  data-id = ${data} class = 'btn-delete btn-delete-${row["ID"]} btn btn-danger'>
                                                <i class="bi bi-x-circle"></i>
                                            </button>` : '';

                            return `<a href ='/Frontend_63132986/Details?bookedID=${row['ID']}&customerID=${row['CustomerID']}&userID=${row['UserID']}&roomID=${row['RoomID']}'

                                                class ='btn-detail-${data} btn btn-info '>
                                                <i class='bi bi-three-dots'></i>
                                            </a>
                                            <a href ='/Rooms_63132986/Edit/${data}' class ='btn-update btn btn-primary mx-2'>
                                                <i class='bi bi-pencil-square'></i> </a>` + cancelButton;

                        },
                        "orderable": false,
                        "width": "180px",
                    },
                ]
            })
        })




        // Cancel room by ajax
        $("body").on("click", ".btn-delete", function () {
            const id = $(this).data("id");
            Swal.fire({
                title: "Are you sure to cancel the room?",
                html: `If you agree, your have to wait 24 hours to book this room again
                    <br/>And all your deposit will not refund to you`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, I agree!"
            }).then((result) => {
                if (result.isConfirmed) {
                    const cancelDate = new Date().toJSON();
                    $.ajax({
                        method: "POST",
                        url: "/Frontend_63132986/CancelRoomRequest/" + id,
                        data: {
                            date: cancelDate,
                        },
                        dataType: "JSON",
                        success: (data) => {
                            if (data.status == 'success') {
                                Swal.fire({
                                    title: "Request Sent!",
                                    html: data.message,
                                    icon: "success"
                                });
                                $(".btn-delete-" + id).hide();
                                $(".booking_status-" + id).html(`<span class="badge rounded-pill text-bg-danger">Sent Request Cancellation</span>`);
                            }
                        },
                    });


                }
            });


        })
    </script>
}