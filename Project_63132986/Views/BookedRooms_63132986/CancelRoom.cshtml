@model Project_63132986.Models.BookedRoom

@{
    ViewBag.Title = "BookedRooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Canceled Rooms</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Forms</a></div>
                <div class="breadcrumb-item">Canceled Rooms </div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Canceled Rooms Room List</h2>
            <p class="section-lead">We provide advanced input fields, such as date picker, color picker, and so on.</p>

            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    
                    <div class="card">
                        <div class="card-header">
                            <a href="/BookedRooms_63132986/Index" class="btn btn-danger"><i class="bi bi-escape"></i></a>
                        </div>
                        <div class="card-body">
                            <table id="userTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Customer ID Number</th>
                                        <th>User Name</th>
                                        <th>Room Name</th>
                                        <th>Canceled Day</th>
                                        <th>Booking Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>
</div>

@section scripts{

    <script>

        $(document).ready(function () {



            //Get Canceled Booked Room list by ajax

            $("#userTable").DataTable({
                "ajax": {
                    "url": "/BookedRooms_63132986/GetCancelRoomList",
                    "type": "GET",
                    "data": "json"
                },
                "columns": [
                    { "data": "ID" },
                    {
                        "data": "CustomerID", "render": function (data, type, row) {
                            return `<div class="customer-${row['ID']}"> ${data} </div>`
                        }
                    },
                    { "data": "UserName" },
                    { "data": "RoomName" },
                    { "data": "CancelDay" },
                    {
                        "data": "BookingStatus", "render": function (data, type, row, meta) {
                                return `<span class="badge rounded-pill text-bg-warning">Cancelled</span>`;
                        }
                    },
                    {
                        "data": "ID", "class": "actionBtn text-center", "render": function (data, type, row) {
                            return `<a href ='/BookedRooms_63132986/Details?bookedID=${row['ID']}&customerID=${row['CustomerID']}&userID=${row['UserID']}&roomID=${row['RoomID']}'

                                        class ='btn-detail-${data} btn btn-info '>
                                        <i class='bi bi-three-dots'></i>
                                    </a>
                                    <button data-id = ${data} class = 'btn-delete btn btn-danger'>
                                      <i class="bi bi-trash"></i>
                                    </button>`;
                        },
                        "orderable": false,
                        "width": "200px",
                    },

                ]
            })
        })




        // Delete room by ajax
        $("body").on("click", ".btn-delete", function () {
            const id = $(this).data("id");
            Swal.fire({
                title: "Are you sure?",
                text: "You wil be responsible for this ajustment!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, I accept!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "/BookedRooms_63132986/Delete/" + id,
                        dataType: "JSON",
                        success: (data) => {

                            console.log($(this).parents("tr"));
                            $(this).parents("tr").hide();
                        },
                    });
                    Swal.fire({
                        title: "Canceled!",
                        html:"This room has been deleted.",
                        icon: "success"
                    });

                }
            });


        })
    </script>
}