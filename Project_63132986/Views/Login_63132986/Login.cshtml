@model Project_63132986.Models.UserInfo

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    string text = "text-danger";
    if (ViewBag.Status == "Success") { text = "text-success"; }
}


<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="login-brand ">
                <img src="~/assets/images/LogoHotel.png" alt="logo" width="100" class="bg-dark  shadow-light rounded-circle">
            </div>

            <div class="card card-primary">
                <div class="card-body">

                    <!--
                    URL: "Localhost/Login_63132986/Login"
                    <form method="POST" action="/Login_63132986/Login">
                        <input type="text" name="user"/>
                        <button>Submit</button>
                    </form>
    !-->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken() // Chống giả mạo người dùng

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="float-right">
                                    <a href="/Login_63132986/ForgetPassword" class="text-small">
                                        Forgot Password?
                                    </a>
                                </div>
                                @Html.LabelFor(model => model.UserPassword, "User Password", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 ">
                                    <label class="@text">@ViewBag.Notification</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                    <i class="fa-solid fa-right-to-bracket">&emsp;</i>Login
                                </button>
                            </div>
                            <div class="form-group">
                                <a href="/Frontend_63132986/Index" class="btn btn-danger btn-lg btn-block" tabindex="4">
                                    <i class="fa-solid fa-door-open">&emsp;</i>Back
                                </a>
                            </div>

                        </div>
                    }

                </div>
            </div>
            <div class="mt-5 text-muted text-center">
                Don't have an account? <a href="/Login_63132986/SignUp">Create One</a>
            </div>
            <div class="simple-footer">
                RunchTy Hotel
            </div>
        </div>
    </div>
</div>
